<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.teg" path="/org/gnome/teg/">
    <key name="playername" type="s">
      <default>''</default>
      <summary>Player name</summary>
      <description>Name of the player</description>
    </key>
    <key name="servername" type="s">
      <default>'localhost'</default>
      <summary>Server name</summary>
      <description>Name of the server to connect to</description>
    </key>
    <key name="port" type="i">
      <default>1234</default>
      <summary>Server port</summary>
      <description>Port number for server connection</description>
    </key>
    <key name="color" type="i">
      <default>0</default>
      <summary>Player color</summary>
      <description>Color index for the player</description>
    </key>
    <key name="theme" type="s">
      <default>'m2'</default>
      <summary>Theme name</summary>
      <description>Name of the theme to use</description>
    </key>
    <key name="msgshow" type="i">
      <default>1</default>
      <summary>Message show level</summary>
      <description>Level of messages to show</description>
    </key>
    <key name="msgshow-with-color" type="b">
      <default>true</default>
      <summary>Show messages with color</summary>
      <description>Whether to show messages with color</description>
    </key>
    <key name="status-show" type="i">
      <default>1</default>
      <summary>Status show level</summary>
      <description>Level of status information to show</description>
    </key>
    <key name="dialog-show" type="i">
      <default>1</default>
      <summary>Dialog show level</summary>
      <description>Level of dialogs to show</description>
    </key>
    <key name="robot-in-server" type="b">
      <default>false</default>
      <summary>Robot in server</summary>
      <description>Whether to enable robot in server</description>
    </key>
  </schema>
</schemalist> 